          .navbar-nav
            a.nav-link.active(aria-current="page", href="#") Home
            a.nav-link(href="#") Cookies
            a.nav-link(href="#") Biscuits
            a.nav-link.disabled LOGOUT
    .container.dstyle
      h1
        strong.text-white Welcome to Debbie confectionaries
